<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">13sp</item>
        <item name="spinnerStyle">@style/holoSpinner</item>
    </style>

    <style name="AppTheme_NoActionbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">13sp</item>
        <item name="spinnerStyle">@style/holoSpinner</item>
    </style>

    <style name="AppTheme.AppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Popup" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme_Dialog_Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:windowMinWidthMajor">98%</item>
        <item name="android:windowMinWidthMinor">98%</item>
    </style>
    <!-- Local copy of android:DialogWindowTitle.Holo -->
    <style name="DialogWindowTitle_Holo">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.DialogWindowTitle</item>
    </style>

    <style name="holoSpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:padding">0dp</item>
    </style>

    <style name="ProgressBarDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
